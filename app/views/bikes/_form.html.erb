<%= form_with(model: [@service_center.service_owner, @service_center, @service_center.bikes.build], local: true) do |form| %>
  <h2>Register Bike</h2>
  <div class="form-group2">
    <%= form.label :info, "Bike Info" %>
    <%= form.text_field :info, class: 'form-control', placeholder: 'Enter bike information' %>
  </div>

  <div class="form-group2">
    <%= form.label :regstration_num, "Registration Number" %>
    <%= form.text_field :regstration_num, class: 'form-control', placeholder: 'Enter registration number' %>
  </div>

  <div class="form-group2">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(['avilable', 'full_service', 'wash_service', 'engine_service', 'not_avilable']), {}, class: 'form-control' %>
  </div>

  <div class="form-group2">
    <%= form.label :rate %>
    <%= form.text_field :rate, class: 'form-control', placeholder: 'Enter bikes rate per day' %>
  </div>

  <div class="form-group2">
    <%= form.file_field :avatar %>
  </div>

  <div class="form-group2">
    <%= form.submit 'Register Bike', class: 'btn btn-primary' %>
  </div>
<% end %>
