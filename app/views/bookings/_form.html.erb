<!-- app/views/bookings/new.html.erb -->
<div>
<h1>New Booking</h1>

<%= form_with(model: [@service_owner, @service_center, @bike, @bike.bookings.build], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :booking_date, "Booking Date" %>
    <%= form.date_field :booking_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :return_date, "Return Date" %>
    <%= form.date_field :return_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :document, "Goverment Document"%>
    <%= form.file_field :document %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Booking', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>
