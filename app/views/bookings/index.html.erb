<!-- app/views/bookings/index.html.erb -->
<h1>Bookings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Booking ID</th>
      <th>Booking Date</th>
      <th>Status</th>
      <th>Client User</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.id %></td>
        <td><%= booking.booking_date %></td>
        <td><%= booking.status %></td>
        <td><%= booking.client_user.name %></td>
        <td>
          <%= link_to 'View', service_owner_service_center_bike_booking_path(booking.bike.service_center.service_owner, booking.bike.service_center, booking.bike, booking), method: :get, class: 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
