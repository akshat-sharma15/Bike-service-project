<!-- app/views/service_owners/index.html.erb -->
hey<h1> <%= @service_owner.name%> </h1>
  <ul>
    <% @service_owner.service_centers.each do |s|%>
        <li class ="index-list">
          <%= link_to s.name, service_owner_service_center_path(@service_owner,s)%>    
        </li>
    <% end %>
  </ul>


<div class="sign-out-btn">
  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn' %>
   <%= button_to "update user",user_registration_path , method: :put, class: 'btn' %>
</div>



<div class="service-center-form" id="service-center-form">
  <div class="Add-service-center">
    <h2>Add Service center</h2>
    <%= form_with(model: [@service_owner, @service_owner.service_centers.build], url: service_owner_service_centers_path(@service_owner), local: true) do |form| %>
      <div class="form-group2">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group2">
        <%= form.label :location %>
        <%= form.text_field :location, class: 'form-control' %>
      </div>

      <div class="form-group2">
        <%= form.submit 'Create Service Center', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

