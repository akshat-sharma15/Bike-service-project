  <%= form_with(model: [@service_center.service_owner, @service_center, @service_center.ratings.build], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :star, "Rating (1-5 Stars)" %>
    <%= form.number_field :star, in: 1..5, step: 1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :comments, "Comments" %>
    <%= form.text_area :comments, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit Rating", class: "btn btn-primary" %>
  </div>
<% end %>

